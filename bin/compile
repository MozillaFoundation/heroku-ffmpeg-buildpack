#!/bin/sh
set -e

BUILD_DIR=$1
FFMPEG_VERSION=${FFMPEG_VERSION:-"n5.1.6"}
TARBALL_URL="https://github.com/MozillaFoundation/heroku-ffmpeg-static-builds/releases/download/v${FFMPEG_VERSION}/ffmpeg-${FFMPEG_VERSION}-webp.tar.xz"

echo "Installing FFmpeg $FFMPEG_VERSION..."
mkdir -p "$BUILD_DIR"
curl -sSL "$TARBALL_URL" | tar -xJ -C "$BUILD_DIR"
chmod +x "$BUILD_DIR/bin/ffmpeg" "$BUILD_DIR/bin/ffprobe"

echo "FFmpeg installed at $BUILD_DIR/bin"